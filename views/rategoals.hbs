			{{#if id}}
			<h1><center>Rating Descriptions</center></h1>
      <div class="jumbotron">
        <div class="row">
          <div class="col">
            <h3>1-Improvement Needed</h3>
            <p>Does not meet the requirements of the job, task, or project. Improvement is needed</p>
          </div>
          <div class="col">
            <h3>2-Achieves Expectations</h3>
            <p>Successfully meets the requirements of the job, task, or project. Performance consistently meets standards</p>
          </div>
          <div class="col">
            <h3>3-Exceeds Expectations</h3>
            <p>Exceeds the performance of the job, task, or project. Performance is characterized by consistent high achievement</p>
          </div>
          <div class="col">
            <h3>4-Outstanding</h3>
            <p>Far exceeds the requirements of the job, task, or project. Performance consistently shows outstanding achievement far above expectations.</p>
          </div>
        </div>
      </div>
				<form action="/rategoals" method="post">
					<center>
						{{#each goals}}
							Goal #{{@index}}: {{this.goal}}
							<select name="rating{{@index}}">
								<option value="4">4 - Outstanding</option>
    						<option value="3">3 - Exceeds Expectations</option>
    						<option value="2">2 - Meets Expectations</option>
    						<option value="1">1 - Improvement Needed</option>
							</select><br />
						{{/each}}
						<input type="Submit" name="{{id}}">
					</center>
				</form>
			{{else}}

				<center>
					<h1>Rate Goals</h1>
					<h4>Enter in an SAP number for the EPE form you wish to add goal ratings to.</h4>
				</center>

				<form action="/rategoals" method="get">
					<center>
							<div class="sap-get">
									<input type="text" name="SAPnum" class="sap-search" placeholder="SAP Number">
									<input type="Submit" name="submitButton">
							</div>
					</center>
				</form>

				{{#if errorMessage}}
					<center>
						<p style="color:red;">
							{{errorMessage}}
						</p>
					</center>
				{{/if}}

			{{/if}}
	</body>
